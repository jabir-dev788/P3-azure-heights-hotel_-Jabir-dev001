# ========================================
# Environment Variables Template
# ========================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file, only .env.example
# 
# Usage: 
# 1. Copy this file: cp .env.example .env
# 2. Fill in your values
# 3. Update hotel.html/hotel.js to use these variables

# ========================================
# Hotel Information
# ========================================
HOTEL_NAME=Azure Heights Hotel
HOTEL_ADDRESS=123 Ocean Boulevard, Miami, FL 33139
HOTEL_PHONE=+1 (305) 555-0199
HOTEL_EMAIL=reservations@azureheights.com
HOTEL_WEBSITE=https://azureheights.com

# ========================================
# API Endpoints
# ========================================
API_BASE_URL=http://localhost:3000/api
API_CONTACT_ENDPOINT=/contact
API_BOOKING_ENDPOINT=/bookings
API_ROOMS_ENDPOINT=/rooms

# ========================================
# Third-Party Services
# ========================================
# Stripe Payment Gateway
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Google Maps API (for location embedding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email Service (for contact forms)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@azureheights.com

# ========================================
# Social Media Links
# ========================================
FACEBOOK_URL=https://facebook.com/azureheights
INSTAGRAM_URL=https://instagram.com/azureheights
TWITTER_URL=https://twitter.com/azureheights
LINKEDIN_URL=https://linkedin.com/company/azureheights

# ========================================
# Tracking & Analytics
# ========================================
# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Hotjar (for heatmaps and user feedback)
HOTJAR_SITE_ID=your_hotjar_site_id_here

# ========================================
# Feature Flags
# ========================================
# Enable/disable features in development
ENABLE_BOOKING=false
ENABLE_PAYMENT=false
ENABLE_ANALYTICS=false
ENABLE_CHAT=false

# ========================================
# Development Settings
# ========================================
NODE_ENV=development
DEBUG=false
LOG_LEVEL=info

# ========================================
# Security
# ========================================
# CORS settings
CORS_ORIGIN=http://localhost:3000

# Session settings
SESSION_SECRET=your_secret_key_here
JWT_SECRET=your_jwt_secret_key_here

# ========================================
# Database (if using backend)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hotel_db
DB_USER=db_user
DB_PASSWORD=db_password

# ========================================
# Email Configuration
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ========================================
# AWS S3 (for image storage)
# ========================================
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_BUCKET_NAME=azure-heights-bucket
AWS_REGION=us-east-1

# ========================================
# CDN Settings
# ========================================
CDN_URL=https://cdn.azureheights.com
CDN_KEY=your_cdn_key_here

# ========================================
# Application Settings
# ========================================
APP_NAME=Azure Heights Hotel
APP_VERSION=2.0.0
MAX_FILE_SIZE=5242880
ITEMS_PER_PAGE=12
